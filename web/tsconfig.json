{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "../tsconfig.json",
  "include": ["**/*.tsx", "**/*.ts", "**/*.js", "**/*.jsx"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    /* Modules */
    "baseUrl": "./",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "resolveJsonModule": false,
    "types": ["vite/client"],

    /* Language and Environment */
    "jsx": "react-jsx",
    "lib": ["ESNext", "DOM"],
    "target": "ESNext"
  }
}
